@using Drippyz.Data

@model NewProductVM

 
@{
    ViewData["Title"] = "Create a new Product";
}
<body class="drip">

<div class="row">
    <div class="col-md-8 offset-2 Cover">
        <p>
            <h4>Create a new Product</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"></label>
                                <input asp-for="ImageURL" class="form-control" type = "file" />
                                @*<span asp-validation-for="ImageURL" class="text-danger"></span>*@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="StoreId" class="control-label"></label>
                                <select asp-for="StoreId" class="form-control" asp-items="ViewBag.Stores"></select>
                                <span asp-validation-for="StoreId" class="text-danger"></span>
                            </div>
                   <div class="form-group">
                                <label asp-for="ProductCategory" class="control-label"></label>
                                <select asp-for="ProductCategory" class="form-control" asp-items="Html.GetEnumSelectList<ProductCategory>()"></select>
                                <span asp-validation-for="ProductCategory" class="text-danger"></span>
                            </div>
                         
                           
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn  btn-success-pink-2 float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>
</body>

