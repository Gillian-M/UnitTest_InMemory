@model Store

@{
    ViewData["Title"] = "Store Details";
}
<body class="drip">

<div class="row text">
    <div class="col-md-8 offset-2 Cover">
        <p>
            <h4>Details for @Model.Name</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                       <img class="border-info rounded-circle" style="max-width: 150px" src="~/@Model.Glyph" alt="@Model.Name"/> 
                     @*<img class="border-info rounded-circle" style="max-width: 150px" id="GlyphPreview" />*@  
                    </div>
                    <div class="form-group">
                        <label asp-for="Glyph" class="control-label"></label>
                        <input asp-for="Glyph" class="form-control" readonly />
                        <span asp-validation-for="Glyph" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="btn  btn-success-pink-2 float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        }
                            <a class="btn btn-outline-primary" asp-action="Index">Back</a>
                        </div>
            </div>
        </div>
    </div>
</div>
<div>

</div>
</body>
