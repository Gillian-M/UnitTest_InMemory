

@model IEnumerable<Store>
@{
    ViewData["Title"] = "Stores";
}
<body class="drip">

<div class="row">
    <div class="col-md-8 offset-md-2 Cover">

        <table class="table">
            <thead>

                <tr class="text-center">

                        <th></th>
                        <th>@Html.DisplayNameFor(model=> model.Name)</th>
                        <th>@Html.DisplayNameFor(model=> model.Description)</th>
                        <th>Options</th>
                    </tr>
            </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                        @*<td class="align-middle"><img src="~/@Model.Glyph" alt="@item.Name" style="max-width:150px;" /></td>*@
                        <td class="align-middle"><img class="border-info rounded-circle" style="max-width: 150px" src="@item.Glyph" alt="@item.Name"/> </td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Description)</td>
                        
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> 
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a> 
                            <a class="btn alert-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Delete</a>
                            </td>
                        }
                        
                    </tr>
                }

                </tbody>
           

        </table>

    </div>
</div>


<!--default stores controller-->

@await Html.PartialAsync("_CreateItem", "Stores")

</body>